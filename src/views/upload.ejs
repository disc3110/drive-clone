<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100">
    <%- include('partials/navbar', { user: user || null }) %>
    <% if (errorMessages && errorMessages.length) { %>
      <div class="mb-4 rounded-md bg-red-500/10 border border-red-500/40 px-3 py-2 text-sm text-red-200">
        <% errorMessages.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (successMessages && successMessages.length) { %>
      <div class="mb-4 rounded-md bg-emerald-500/10 border border-emerald-500/40 px-3 py-2 text-sm text-emerald-200">
        <% successMessages.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>
    <nav class="bg-slate-900 border-b border-slate-800">
      <div class="max-w-4xl mx-auto flex items-center justify-between px-4 py-3">
        <a href="/" class="font-semibold tracking-tight">Drive Clone</a>
        <div class="flex gap-3 items-center">
          <% if (user) { %>
            <span class="text-sm text-slate-300"><%= user.email %></span>
            <form action="/logout" method="POST">
              <button
                class="px-3 py-1.5 text-sm rounded-md bg-slate-700 hover:bg-slate-600"
              >
                Logout
              </button>
            </form>
          <% } else { %>
            <a href="/login" class="text-sm hover:underline">Login</a>
          <% } %>
        </div>
      </div>
    </nav>

    <main class="max-w-4xl mx-auto px-4 py-10">
      <h1 class="text-2xl font-semibold mb-4">Upload a file</h1>

      <% if (errors && errors.length) { %>
        <div class="mb-4 space-y-1">
          <% errors.forEach(err => { %>
            <p class="text-sm text-red-300">
              â€¢ <%= err.msg %>
            </p>
          <% }) %>
        </div>
      <% } %>

      <form
        action="/files/upload"
        method="POST"
        enctype="multipart/form-data"
        class="space-y-4 bg-slate-900/60 border border-slate-800 rounded-xl p-6"
      >
        <div>
          <label class="block text-sm mb-1" for="name">
            Name (optional)
          </label>
          <input
            class="w-full rounded-md bg-slate-900 border border-slate-700 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
            type="text"
            id="name"
            name="name"
          />
        </div>

        <div>
          <label class="block text-sm mb-1" for="file">File</label>
          <input
            class="block w-full text-sm text-slate-100 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-500 file:hover:bg-indigo-400"
            type="file"
            id="file"
            name="file"
            required
          />
        </div>

        <input type="hidden" name="folderId" value="<%= folderId || '' %>" />

        <button
          class="rounded-md bg-indigo-500 hover:bg-indigo-400 px-4 py-2 text-sm font-medium"
          type="submit"
        >
          Upload
        </button>
      </form>
    </main>
  </body>
</html>