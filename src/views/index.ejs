<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100">
    <nav class="bg-slate-900 border-b border-slate-800">
      <div class="max-w-4xl mx-auto flex items-center justify-between px-4 py-3">
        <span class="font-semibold tracking-tight">Drive Clone</span>

        <div class="flex gap-3">
          <% if (user) { %>
            <form action="/logout" method="POST">
              <button
                class="px-3 py-1.5 text-sm rounded-md bg-slate-700 hover:bg-slate-600"
              >
                Logout
              </button>
            </form>
          <% } else { %>
            <a href="/login" class="text-sm hover:underline">Login</a>
            <a
              href="/register"
              class="text-sm px-3 py-1.5 rounded-md bg-indigo-500 hover:bg-indigo-400"
              >Sign up</a
            >
          <% } %>
        </div>
      </div>
    </nav>

    <main class="max-w-4xl mx-auto px-4 py-10">
      <h1 class="text-3xl font-bold mb-2">Welcome<% if (user && user.name) { %>, <%= user.name %><% } %>!</h1>
      <% if (user) { %>
        <div class="mt-6 flex items-center justify-between">
          <h2 class="text-lg font-semibold">Your folders</h2>
          <a
            href="/folders/new"
            class="text-sm rounded-md bg-indigo-500 hover:bg-indigo-400 px-3 py-1.5"
          >
            New folder
          </a>
        </div>

        <div class="mt-4 grid gap-3 sm:grid-cols-2">
          <% if (folders && folders.length) { %>
            <% folders.forEach(folder => { %>
              <a
                href="/folders/<%= folder.id %>"
                class="block rounded-lg border border-slate-800 bg-slate-900/60 px-4 py-3 hover:border-indigo-500"
              >
                <div class="font-medium"><%= folder.name %></div>
                <div class="text-xs text-slate-400">
                  Created <%= folder.createdAt.toISOString().slice(0,10) %>
                </div>
              </a>
            <% }) %>
          <% } else { %>
            <p class="text-sm text-slate-400 col-span-full">
              You donâ€™t have any folders yet.
            </p>
          <% } %>
        </div>

        <div class="mt-6">
          <a
            href="/upload"
            class="inline-flex items-center rounded-md bg-indigo-500 hover:bg-indigo-400 px-4 py-2 text-sm font-medium"
          >
            Upload a file without a folder
          </a>
        </div>
      <% } %>
    </main>
  </body>
</html>