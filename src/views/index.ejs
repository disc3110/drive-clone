<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100">
    <%- include('partials/navbar', { user: user || null }) %>

    <main class="max-w-4xl mx-auto px-4 py-10">
      <% if (errorMessages && errorMessages.length) { %>
        <div class="mb-4 rounded-md bg-red-500/10 border border-red-500/40 px-3 py-2 text-sm text-red-200">
          <% errorMessages.forEach(msg => { %>
            <p><%= msg %></p>
          <% }) %>
        </div>
      <% } %>

      <% if (successMessages && successMessages.length) { %>
        <div class="mb-4 rounded-md bg-emerald-500/10 border border-emerald-500/40 px-3 py-2 text-sm text-emerald-200">
          <% successMessages.forEach(msg => { %>
            <p><%= msg %></p>
          <% }) %>
        </div>
      <% } %>

      <h1 class="text-3xl font-bold mb-2">Welcome<% if (user && user.name) { %>, <%= user.name %><% } %>!</h1>
      <% if (user) { %>
        <div class="mt-6 flex items-center justify-between">
          <h2 class="text-lg font-semibold">Your folders</h2>
          <a
            href="/folders/new"
            class="text-sm rounded-md bg-indigo-500 hover:bg-indigo-400 px-3 py-1.5"
          >
            New folder
          </a>
        </div>

        <div class="mt-4 grid gap-3 sm:grid-cols-2">
          <% if (folders && folders.length) { %>
            <% folders.forEach(folder => { %>
              <a
                href="/folders/<%= folder.id %>"
                class="block rounded-lg border border-slate-800 bg-slate-900/60 px-4 py-3 hover:border-indigo-500"
              >
                <div class="font-medium"><%= folder.name %></div>
                <div class="text-xs text-slate-400">
                  Created <%= folder.createdAt.toISOString().slice(0,10) %>
                </div>
              </a>
            <% }) %>
          <% } else { %>
            <p class="text-sm text-slate-400 col-span-full">
              You donâ€™t have any folders yet.
            </p>
          <% } %>
        </div>

        <div class="mt-10">
          <div class="flex items-center justify-between mb-2">
            <h2 class="text-lg font-semibold">Files not in a folder</h2>
            <a
              href="/files/upload"
              class="text-xs rounded-md bg-indigo-500 hover:bg-indigo-400 px-3 py-1.5"
            >
              Upload file
            </a>
          </div>

          <% if (rootFiles && rootFiles.length) { %>
            <ul class="space-y-2">
              <% rootFiles.forEach(file => { %>
                <li
                  class="flex items-center justify-between rounded-md bg-slate-900/60 border border-slate-800 px-4 py-2 text-sm"
                >
                  <a
                    href="/files/<%= file.id %>"
                    class="hover:underline"
                  >
                    <%= file.name || file.originalName %>
                    <span class="text-xs text-slate-400">
                      (<%= (file.size / 1024).toFixed(1) %> KB)
                    </span>
                  </a>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-sm text-slate-400">
              You don't have any loose files yet. Upload one!
            </p>
          <% } %>
        </div>

        <div class="mt-6">
          <a
            href="/files/upload"
            class="inline-flex items-center rounded-md bg-indigo-500 hover:bg-indigo-400 px-4 py-2 text-sm font-medium"
          >
            Upload a file without a folder
          </a>
        </div>
      <% } %>
    </main>
  </body>
</html>