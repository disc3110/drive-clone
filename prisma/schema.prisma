generator client {
  provider = "prisma-client-js"
  // no output => default into node_modules/@prisma/client
}

datasource db {
  provider = "postgresql"
}

// Users for authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt hash
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Sessions for @quixo3/prisma-session-store
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}